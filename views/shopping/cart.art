<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>商品分类</title>
    <link rel="stylesheet" href="/shopping/css/cart.css">
    <link rel="stylesheet" href="/shopping/css/nav.css">
</head>

<body>
    <!-- nav -->
    <header class="header">
        <div class="fr nav">
            <ul class="navbar_nav" data-in="fadeInDown" data-out="fadeOutUp">
                <li class="active">
                    <a href="javascript:void(0)">首页</a>
                </li>
                <li class="dropdown">
                    <a href="javascript:void(0)">
                        商品分类
                    </a>
                    <div class="dropdown_menu">
                        <a href="#">火锅底料</a>
                        <a href="#">素&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;菜</a>
                        <a href="#">荤&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;菜</a>
                        <a href="#">海&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;鲜</a>
                        <a href="#">主&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;食</a>
                    </div>
                </li>
                <li>
                    <a href="javascript:void(0)">购物车</a>
                </li>
                <li>
                    <a href="javascript:void(0)">会员信息</a>
                </li>
            </ul>
        </div>
    </header>
    <section class="content">
        <div class="left">
            <ul id="left">
                <li class="td">
                    <ul>
                        <li>
                            <input type="text" placeholder="搜索">
                        </li>
                        <li id="tuijian">推荐</li>
                        <li id="diliao">火锅底料</li>
                        <li id="sucai">素菜</li>
                        <li id="huncai">荤菜</li>
                        <li id="zhushi">主食</li>
                        <li id="dingdan">我的订单</li>
                    </ul>
                </li>
                <div class="imimt">
                    <li>名称：</li>
                </div>
                <div id="zongjine">总金额：</div>
                <!-- payforit -->
                <button id="paygoods">确认支付</button>
                <!-- /payforit -->
            </ul>
        </div>
        <!-- right -->
        <div class="right">
            <ul>
            {{each allgoodsinfo}}
                <!-- goods -->
                <li id="goodsinfos">
                    <div class="hd img-box">
                        <img src="/upload/{{$value.goodimg}}"/>
                    </div>
                    <div class="td">
                        <div>
                            <h3>{{$value.goodsname}}</h3>
                        </div>
                        <div>
                            <span style="color: red;font-size: 16px;">{{$value.goodprice}}.00元</span>
                            <div>
                                <button class="white-btn" style="width: 100px;" id="delcartbtn">删除</button>
                                <button class="white-btn" style="width: 100px;" id="incartbtn">加入购物车</button>
                            </div>
                        </div>
                    </div>
                    <div id="xiangqingjieshao">商品详情：{{$value.description}}</div>
                </li>
                <!-- /goods -->
                {{/each}}
            </ul>
        </div>
        <!-- /right -->
    </section>
    <script src="/shopping/js/jquery.js"></script>
    <script src="/shopping/js/cart.js"></script>
    <script>
        $(function () {
            // PicScroll
            new PicScroll('.img-box', { speedUp: 800, speedDown: 500 })
        });
    </script>
</body>

</html>